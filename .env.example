# ============================================
# YChatClaw - Configuração do Ambiente
# ============================================

# ----------------------------------------
# Banco de Dados (PostgreSQL)
# ----------------------------------------
POSTGRES_USER=ychatclaw
POSTGRES_PASSWORD=ychatclaw_secret
POSTGRES_DB=ychatclaw
DATABASE_URL=postgresql://ychatclaw:ychatclaw_secret@postgres:5432/ychatclaw

# ----------------------------------------
# Redis (Fila e Cache)
# ----------------------------------------
REDIS_URL=redis://redis:6379

# ----------------------------------------
# Ollama (IA Local)
# IMPORTANTE: Ollama já existe na VPS em http://127.0.0.1:11434
# Usar host.docker.internal para acessar do container
# ----------------------------------------
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3:8b
OLLAMA_VISION_MODEL=llava:13b

# ----------------------------------------
# Portas dos Serviços
# ----------------------------------------
API_PORT=3000
WS_PORT=3001
AI_PORT=3002
WHATSAPP_PORT=3003

# URLs internas (para comunicação entre serviços)
AI_SERVICE_URL=http://ai-service:3002
WS_SERVER_URL=http://websocket-server:3001

# ----------------------------------------
# WhatsApp (Baileys)
# ----------------------------------------
WHATSAPP_ENABLED=true
WHATSAPP_SESSION_PATH=./sessions/whatsapp

# ----------------------------------------
# Telegram (via telegraf)
# ----------------------------------------
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=seu_token_aqui

# ----------------------------------------
# Discord (via discord.js)
# ----------------------------------------
DISCORD_ENABLED=true
DISCORD_BOT_TOKEN=seu_token_aqui

# ----------------------------------------
# Segurança
# ----------------------------------------
# Gerar um JWT_SECRET forte: openssl rand -base64 32
JWT_SECRET=seu_jwt_secret_aqui_muito_forte
# Gerar uma ENCRYPTION_KEY de 32 caracteres
ENCRYPTION_KEY=sua_chave_de_32_caracteres_aqui

# ----------------------------------------
# Configurações de Broadcast
# ----------------------------------------
BROADCAST_BATCH_SIZE=10
BROADCAST_DELAY_MS=200

# ----------------------------------------
# Configurações do Worker
# ----------------------------------------
WORKER_CONCURRENCY=5

# ----------------------------------------
# Heartbeat e Timeout
# ----------------------------------------
HEARTBEAT_TIMEOUT_MS=90000

# ----------------------------------------
# Rate Limiting
# ----------------------------------------
MAX_COMMANDS_PER_MINUTE=30
MAX_QUEUE_SIZE=1000

# ----------------------------------------
# Armazenamento de Mídia
# ----------------------------------------
MEDIA_STORAGE_PATH=./media
MAX_FILE_SIZE_MB=50

# ----------------------------------------
# APIs Externas (Opcional)
# ----------------------------------------
# Grok - Geração de vídeo
GROK_API_KEY=

# Nano Banana - Geração de imagem
NANO_BANANA_API_KEY=

# ----------------------------------------
# Ambiente
# ----------------------------------------
NODE_ENV=production
